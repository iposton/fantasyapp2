<%= render "shared/teamnav" %>

 <div class="container-show-team">
  
     <div class="row">

<h1> Team Info Page</h1>

  <div id="posts-box" class="sidebar-module col-sm-4">

  	<h4><%= @team.name %> </h4>
  	<ol>
    <li>PG - <%= @team.player %></li>
	<li>SG - <%= @team.player2 %></li>
	<li>SF - <%= @team.player3 %></li>
	<li>PF -  <%= @team.player4 %></li>
	<li>C - <%= @team.player5 %></li>
	<li>Sixth Man - <%= @team.player6 %></li>
	<li><%= link_to "Edit Team", edit_user_team_path(@user, @team), class: 'btn btn-lg btn-default' %>

<%= link_to "Delete Team", user_team_path(@user, @team), method: :delete, class: 'btn btn-lg btn-danger', data: { confirm: "Are you sure you want to delete this Team?"} %></li>
   </ol>
 

</div>

  <div id="posts-box" class="sidebar-module col-sm-4">

  	<h4><%= @team.name %>'s Available Players </h4>
  	<ol>

	    <li><%= @team.available %></li>
		<li><%= @team.available2 %></li>
		<li><%= @team.available3 %></li>
		<li><%= @team.available4 %></li>
		<li><%= @team.available5 %></li>
		<li><%= @team.available6 %></li>
		<li><%= link_to "Add Player", "http://sports.yahoo.com/nba/stats", class: 'btn btn-lg btn-warning' %>

	    
    </ol>
  




     </div>

       <div id="posts-box" class="sidebar-module col-sm-4">

  	<h4>Top Unavailable Players </h4>
  	<ol>

	    <li><%= @team.topunavailable %></li>
		<li><%= @team.topunavailable2 %></li>
		<li><%= @team.topunavailable3 %></li>
		<li><%= @team.topunavailable4 %></li>
		<li><%= @team.topunavailable5 %></li>
		<li><%= @team.topunavailable6 %></li>
		<li><%= link_to "More Info", "http://sports.yahoo.com/nba/stats", class: 'btn btn-lg btn-default' %>

	    
    </ol>
  




     </div>

  </div>



</div>

